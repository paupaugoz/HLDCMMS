<a href="/management/projects">Return to Projects</a>
         <div class="row">
          <h1 class="viewheader">Project {{item.id}}</h1>
          <h2 class="status">Ongoing</h2>
        </div>
        <div class="row">
        <p class="viewproject"><strong>Project Name</strong>: {{item.projectName}}</p>
        <p class="viewproject2"><strong>Engineer Head</strong>: {{item.EHEAD}}</p>
        </div>
        <div class="row">
        <p class="viewproject"><strong>No of Units:</strong> {{item.noofUnits}}</p>
        <p class="viewproject3"><strong>Engineer-in-Charge:</strong> {{item.EIC}}</p>
        </div>
        <div class="row filter">
    
        
  <div class="row filter materialsrow textright">
   <button type="button" class="btn btn-left  btn-primary" data-toggle="modal" data-target="#exampleModalCenter">New Unit</button>
   

    </div>
 

  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="MyModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">

    <div class="modal-content modal-unit">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">New Unit</h5>
      </div>
      <div class="modal-body">
 
     <form action="/management/postViewProjectsForm" method="POST" id="viewprojects-form">
        <div class="settings">
          <label for="description" class="col-form-label">Description</label>
          <input type="text" id="first-name" name="description" required>
          <label for="template" class="col-form-label">CHOOSE A TEMPLATE</label>
          <select class="unit" id="templateId" name="templateId" required>
          <option disabled selected value></option>
          {{#each templates}}
              <option value={{this.id}}>{{this.templateName}}</option>
          {{/each}}
          </select>
          <label for="startdate" class="col-form-label">START DATE</label>
          <input type="date" id="startDate" name="startDate" required>
          <label for="expecteddateofcompletion" class="col-form-label">EXPECTED DATE OF<br>COMPLETION</label>
          <input type="date" id="completionDate" name="completionDate" required>
          <input type="hidden" name="projectId" value={{projectId}}>
        </div>    
     <div class="modal-footer">
        <button type="button" class="btn btn-transparent" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-save">Save</button>
           </form>
    </div>
     </div>
   </div>
 </div>
  </div>
         </div>

<div class="fixed">
 {{> table tableColumns=columns tableData=data}}
</div>


<script>
 $('#postViewProjectsForm').submit(function(e) {
    e.preventDefault();
    // Coding
    $('#ExampleModalCenter').modal('hide');
    return false;
});
</script>